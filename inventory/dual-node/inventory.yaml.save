all:
  vars:
    schedule_on_control_plane: true
    kube_network_plugin: calico
    kube_network_plugin_multus: true

  hosts:
    rome1:
      ansible_host: 192.168.68.62
      ansible_user: mwiget
      ansible_become: true
      ip: 192.168.68.62
      access_ip: 192.168.68.62
      node_labels:
        "k8s.ovn.org/dpu-host": ""
        "k8s.ovn.org/zone-name": "rome1"
      node_annotations:
        "k8s.ovn.org/remote-zone-migrated": "rome1"
      kubelet_cpu_manager_policy: static
      kubelet_topology_manager_policy: single-numa-node
      kubelet_reservedSystemCPUs: "0-7"

    rome1-dpu:
      ansible_host: 192.168.68.79
      ansible_user: ubuntu
      ansible_become: true
      ip: 192.168.68.79
      access_ip: 192.168.68.79
      node_labels:
        "app": "tmm"
      node_taints:
        - "dpu=true:NoSchedule"

    milan1:
      ansible_host: 192.168.68.73
      ansible_user: mwiget
      ansible_become: true
      ip: 192.168.68.73
      access_ip: 192.168.68.73
      node_labels:
        "k8s.ovn.org/dpu-host": ""
        "k8s.ovn.org/zone-name": "milan1"
      node_annotations:
        "k8s.ovn.org/remote-zone-migrated": "milan1"
      kubelet_cpu_manager_policy: static
      kubelet_topology_manager_policy: single-numa-node
      kubelet_reservedSystemCPUs: "0-7"

    milan1-dpu:
      ansible_host: 192.168.68.96
      ansible_user: ubuntu
      ansible_become: true
      ip: 192.168.68.96
      access_ip: 192.168.68.96
      node_labels:
        "app": "tmm"
      node_taints:
        - "dpu=true:NoSchedule"

  children:
    kube_control_plane:
      hosts:
        rome1:

    kube_node:
      hosts:
        rome1:
        rome1-dpu:
        milan1:
        milan1-dpu:

    etcd:
      hosts:
        rome1:

    k8s_cluster:
      children:
        kube_control_plane:
        kube_node:
